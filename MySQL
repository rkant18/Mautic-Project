$ mysql_secure_installation

$ mysql -u root -p
#####create New user

CREATE DATABASE mauticdb;
CREATE USER 'mautic'@'%' IDENTIFIED BY 'p@ssword';
GRANT ALL PRIVILEGES ON mauticdb.* TO 'mautic'@'%';
FLUSH PRIVILEGES;

